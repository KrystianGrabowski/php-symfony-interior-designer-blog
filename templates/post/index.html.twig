{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Author</th>
            <th>Created at</th>
            <th>Show</th>
        </tr>
    </thead>
    <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.body }}</td>
                <td>{{ post.author }}</td>
                <td>{{ post.createdAt|date('Y-m-d h:i:s') }}</td>
                <td><a href="/post/{{ post.id }}" class="btn btn-dark">Show</a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
